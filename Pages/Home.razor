<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>


@page "/"
<PageTitle>GoLive | Transformamos Ideas en Tecnología</PageTitle>

<!-- HERO SECTION -->
<section class="bg-dark text-white text-center d-flex align-items-center justify-content-center vh-100" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('images/fondo-bienvenidos.jpg') center/cover no-repeat;">
    <div class="container">
        <h1 class="display-3 fw-bold mb-4 animate_animated animate_fadeInDown">Bienvenido a Golive</h1>
        <p class="lead mb-4 animate_animated animate_fadeInUp">Innovación, tecnología y soluciones digitales a tu medida.</p>
        <a href="#servicios" class="btn btn-primary btn-lg animate_animated animatefadeInUp animate_delay-1s">Descubre más</a>
    </div>
</section>

<!-- NAVBAR FIXED ON SCROLL -->
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm sticky-top">
    <div class="container">
        <a class="navbar-brand fw-bold" href="#">Golive</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navContent">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navContent">
            <ul class="navbar-nav mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="#quienes">Nosotros</a></li>
                <li class="nav-item"><a class="nav-link" href="#servicios">Servicios</a></li>
                <li class="nav-item"><a class="nav-link" href="#equipo">Equipo</a></li>
                <li class="nav-item"><a class="nav-link" href="#video">Video</a></li>
            </ul>
        </div>

    </div>
</nav>

<!-- QUIÉNES SOMOS -->
<section id="quienes" class="py-5 bg-white">
    <div class="container">
        <div class="row g-5 align-items-center">
            <!-- Texto -->
            <div class="col-md-6">
                <div class="px-md-4">
                    <h2 class="fw-bold mb-3">¿Quiénes somos?</h2>
                    <p class="lead">
                        En <strong>GoLive</strong> diseñamos plataformas inteligentes para transformar la gestión de datos en decisiones estratégicas.
                    </p>
                </div>
            </div>

            <!-- Imagen -->
            <div class="col-md-6 text-center">
                <div class="px-md-4">
                    <img src="images/empresa.jpg" class="img-fluid rounded shadow-sm" style="max-height: 350px;" alt="Oficinas GoLive" />
                </div>
            </div>
        </div>
    </div>
</section>



<!-- SERVICIOS -->
<section id="servicios" class="py-5 bg-light text-center">
    <div class="container">
        <h2 class="fw-bold mb-5">Nuestros Servicios</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm p-4">
                    <div class="mb-3">
                        <i class="bi bi-code-slash display-4 text-primary"></i>
                    </div>
                    <h5>Desarrollo Web</h5>
                    <p>Creamos sistemas escalables, responsivos y seguros para tus necesidades específicas.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm p-4">
                    <div class="mb-3">
                        <i class="bi bi-bar-chart-line display-4 text-success"></i>
                    </div>
                    <h5>Gestión de Indicadores</h5>
                    <p>Monitorea en tiempo real tus KPIs y toma decisiones inteligentes basadas en datos.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm p-4">
                    <div class="mb-3">
                        <i class="bi bi-cloud-check display-4 text-info"></i>
                    </div>
                    <h5>Infraestructura Cloud</h5>
                    <p>Te llevamos a la nube con soluciones robustas en Azure y AWS.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- EQUIPO -->
<section id="equipo" class="py-5 bg-white text-center">
    <div class="container">
        <h2 class="fw-bold mb-5">Nuestro Equipo</h2>
        <div class="row g-4">
            @foreach (var integrante in integrantes)
            {
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <img src="@integrante.Imagen" class="card-img-top rounded-circle mx-auto mt-4" style="width: 120px; height: 120px; object-fit: cover;" />
                        <div class="card-body">
                            <h6 class="card-title fw-bold">@integrante.Nombre</h6>
                            <p class="card-text">@integrante.Cargo<br /><small>@integrante.Email</small></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- VIDEO -->
<section id="video" class="py-5 bg-dark text-white text-center" style="background: linear-gradient(rgba(0,0,0,0.9), rgba(0,0,0,0.9)), url('images/fondo-video.jpg') center/cover no-repeat;" >
    <div class="container">
        <h2 class="fw-bold mb-4">Conócenos en acción</h2>
        <p class="mb-4">Mira cómo funciona nuestro sistema y conoce a nuestro equipo.</p>
        <div class="ratio ratio-16x9">
            <iframe src="https://www.youtube.com/embed/IyIjYuF_HUo?si=rRLbi2M9rJsafbub" allowfullscreen></iframe>
        </div>
    </div>
</section>

<!-- FOOTER -->
<footer class="bg-dark text-white text-center py-3">
    <p class="mb-0">&copy; 2025 GoLive - Todos los derechos reservados.</p>
</footer>

