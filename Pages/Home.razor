        public string Nombre { get; set; } = "";
        public string Cargo { get; set; } = "";
        public string Email { get; set; } = "";
        public string Imagen { get; set; } = "";
    }

    List<Integrante> integrantes = new()
    {
        new Integrante { Nombre = "Jesús Gómez", Cargo = "CEO", Email = "Jesus@GoLive.com", Imagen = "images/user1.png" },
        new Integrante { Nombre = "Santiago Aguirre", Cargo = "CTO", Email = "Santiago@GoLive.com", Imagen = "images/user2.png" },
        new Integrante { Nombre = "Yeiner Alexis", Cargo = "Developer", Email = "Alexis@GoLive.com", Imagen = "images/user3.png" },
        new Integrante { Nombre = "Julian Castrillón", Cargo = "Developer", Email = "Julian@GoLive.com", Imagen = "images/user4.png" }
